<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prashant.instaclone" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_ig"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_ig_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstaClone" >
        <activity android:exported="true" android:name=".PostActivity"/>

        <activity android:exported="true" android:name=".FollowersFollowing"/>

        <activity android:exported="true" android:name=".ViewComments"/>

        <activity android:exported="true" android:name=".Registration"/>

        <activity android:exported="true" android:name=".Login"/>

        <activity android:exported="true" android:name=".Home" android:windowSoftInputMode="adjustPan"/>

        <activity android:exported="true" android:name=".Search.UserSearchProfileActivity"/>

        <activity android:exported="true" android:name=".Stories.AddStoryActivity"/>

        <activity android:exported="true" android:name=".Stories.StoryActivity"/>

        <activity android:exported="true" android:name=".Search.UserSearchViewPost"/>

        <activity android:exported="true" android:name=".Profile.EditProfile"/>

        <activity android:exported="true" android:name=".Profile.Account_Settings"/>

        <activity android:theme="@style/Base.Theme.AppCompat" android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>


        <activity android:exported="true" android:name=".MainActivity">


            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <meta-data android:name="preloaded_fonts" android:resource="@array/preloaded_fonts"/>

    </application>

</manifest>